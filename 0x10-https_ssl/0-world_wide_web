#!/usr/bin/env bash

# Function to retrieve DNS information for a subdomain
get_dns_info() {
    local domain="$1"
    local subdomain="$2"
    dig "$subdomain"."$domain" | awk '/ANSWER SECTION:/ {getline; print; getline; print}'
}

# Function to display information about a subdomain
display_subdomain_info() {
    local subdomain="$1"
    local record_type="$2"
    local destination="$3"
    printf "The subdomain %s is a %s record and points to %s\n" "$subdomain" "$record_type" "$destination"
}

# Main function to handle command line arguments and display information
main() {
    local domain="$1"
    local subdomain="$2"

    if [ "$#" -eq 1 ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
        for sub in "${subdomains[@]}"; do
            info=$(get_dns_info "$domain" "$sub")
            display_subdomain_info "$sub" $info
        done
    elif [ "$#" -eq 2 ]; then
        info=$(get_dns_info "$domain" "$subdomain")
        display_subdomain_info "$subdomain" $info
    else
        echo "Usage: $0 <domain> [subdomain]"
        exit 1
    fi
}

main "$@"
